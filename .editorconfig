root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# If clang-format is used then values for .c and .h files must agree both here
# and in .clang-format.
indent_style = tab
tab_width = 8

[*.{py,py.in}]
indent_style = space
indent_size = 4

[*.{yml,yml.in}]
indent_style = space
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 72
